#### Combining commands ###
cd ~/Desktop/Capstone_MScData_Sept23_SB/FLServer && source FLServerEnv/bin/activate



cd ~/Desktop/FLServer


### Create an enviroment ####

python3 -m venv FLServerEnv

### Activate/Deactivate the enviroment ####
source FLServerEnv/bin/activate
deactivate

### Install the requirements ####
pip install -r requirements.txt

### Run the server ###
python3 server.py


### Connect the clients: ###
python3 client.py client1 5001
python3 client.py client2 5002
python3 client.py client3 5003
python3 client.py client4 5004
python3 client.py client5 5005

##### To see ports ####

sudo lsof -i -P -n | grep python3

kill -9 245380


